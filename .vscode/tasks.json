{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "test all",
      "type": "shell",
      "command": "mix test --color",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": [
        "linter"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": "$mixTestFailure"
    },
    {
      "label": "test stale",
      "type": "shell",
      "command": "mix test --color --trace --stale",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$mixTestFailure"
    },
    {
      "label": "test failed",
      "type": "shell",
      "command": "mix test --color --trace --failed",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$mixTestFailure"
    },
    {
      "label": "test file",
      "type": "shell",
      "command": "mix test ${file} --color",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$mixTestFailure"
    },
    {
      "label": "test line",
      "type": "shell",
      "command": "mix test ${file}:${lineNumber} --color",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$mixTestFailure"
    },
    {
      "label": "linter",
      "type": "shell",
      "command": "mix format --check-formatted && mix credo --strict",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$mixTestFailure"
    }
  ]
}
